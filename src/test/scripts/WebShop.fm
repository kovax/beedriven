FeatureModel {
    ProductRef( name: "MyFirstWebShop", version: "0.1" ) {
        optional {
            FeatureRef( name: "CustomerSelfManagement", selected: true ) {
                mandatory {
                    FeatureRef( name: "AddressManagement" )
                    FeatureRef( name: "ShippingManagement" )
                }
            }
        }

        mandatory {
            FeatureRef( name: "Security" ) {
                mandatory {
                    FeatureRef(name: "CustomerAuthentication") {
                        scenarios {
                            ScenarioRef(name: "Login")
                            ScenarioRef(name: "Logout")
                            ScenarioRef(name: "ChangePassword") {
                                implemented = true
                                automated = false
                                executed  = false
                                failed = false
                            }
                            ScenarioRef(name: "ForgottenPassword") {
                                implemented = true
                                automated = false
                                executed  = false
                                failed = false
                            }
                        }
                    }
                }
            }
        }
    }
}

